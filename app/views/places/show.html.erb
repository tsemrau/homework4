<h1><%= @place.name %></h1>

<h2>My Posts</h2>
<% for post in @place.posts %>
  <% if post.user_id == @current_user.id %>
    <h3><%= post.title %></h3>
    <h4><%= post.posted_on %></h4>

    <% if post.image_attachment.attached? %>
      <img src="<%= url_for(post.image_attachment) %>">
    <% end %>

    <p><%= post.description %></p>
  <% end %>
<% end %>

<p>
  <a href="/posts/new?place_id=<%= @place.id %>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>